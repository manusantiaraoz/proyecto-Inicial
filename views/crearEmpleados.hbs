<div class="container-fluid bg-dark m-0" style="height : 100vh">
  <div class="container">
    <div class="row align-items-center" style="height : 100vh">
      <div class="col-12 text-light mt-4">
        <div class="d-grid gap-2">
          <h1>Nuevo Empleado</h1>
          <form method="post" action="/admin/empleados/create" enctype="multipart/form-data">
            <div class="mb-3">
              <input
                type="text"
                class="form-control bg-light"
                name="nombre"
                placeholder="nombre"
              />
              >
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control bg-light"
                name="apellido"
                placeholder="apellido"
              />
              >
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control bg-light"
                name="telefono"
                placeholder="telefono"
              />
              >
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control bg-light"
                name="direccion"
                placeholder="direccion"
              />
              >
              <div>
                    <label for="imagen">Agregar imagen<span class="text-danger">*</span></label>
                    <input type="file" name="imagen" id="imagen">
                </div>
            </div>
            <button type="submit" class="btn btn-info">agregar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>