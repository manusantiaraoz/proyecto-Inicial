<div class="container-fluid bg-dark" style="height : 100vh">
  <div class="mb-3 mt-15">
    <form method="post" action="/admin/categorias/create">
      <div class="mb-3">
        <input
          type="text"
          class="form-control bg-info"
          name="nombre"
          placeholder="nueva categoria"
        />
      </div>
      <div class="mb-3">
        <input
          type="text"
          class="form-control bg-info"
          name="descripcion"
          placeholder="descripcion"
        />
      </div>
      <button type="submit" class="btn btn-info">agregar categoria </button>
    </form>
      <p class="text-danger text-center mt-3">{{message}}</p>
  </div>
</div>