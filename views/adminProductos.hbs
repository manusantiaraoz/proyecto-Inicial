<div class = "container-fluid bg-dark m-0" style="height : 100vh">
<table class="table table-dark table-striped">
    <tr>
    <th scope="col">#</th>
    <th scope="col">Nombre</th>
    <th scope="col">Descripcion</th>
    <th scope="col">precio</th>
    <th scope="col">stock</th>
    <th scope="col">Categoria</th>
    <th>-</th>
    <th>-</th>
    <th>-</th>
    </tr>
  
    {{#each productos}}
    <tr>
      <td>{{id}}</td>
      <td>{{nombre}}</td>
      <td>{{descripcion}}</td>
      <td>{{precio}}</td>
      <td>{{stock}}</td>
      <td>{{nombreCategoria}}</td>
      <td><img src="/images/productos/{{uid}}" alt="nofunciona" style="height: 50px"></td>
       <td><a href="/admin/productos/update/{{id}}" class="btn btn-primary"><i class="fas fa-edit"></i>
          Editar</a></td>
        <td><a href="/admin/productos/delate/{{id}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i>
          Eliminar</a></td>
    </tr>
    {{/each}}
    <a href="/admin/productos/create" class="btn btn-success d-grid gap-2 "><i class="fas fa-pen-square"></i>Agregar Productos</a>
</table>
</div>
</div>
